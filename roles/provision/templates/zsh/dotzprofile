# Git aliases
alias gl="git log --oneline -n10"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias gp="git push"
alias gr="git restore"
alias gane="git commit --amend --no-edit"

# CD git root
cdgr() {
    local root
    root=$(git rev-parse --show-toplevel) || return $?
    cd $root || return $?
}

{% if provision_full_setup | bool %}
# z (zoxide) git root
zgr() {
    local root
    root=$(git rev-parse --show-toplevel) || return $?
    z $root || return $?
}
{% endif %}


# Cargo aliases
# cargo test workspace
alias ctw="cargo test --workspace"

# cargo test package
ctp() {
    cargo test -p $(echo $1 | tr -d '/') ${@:2}
}

# cargo clippy workspace
alias ccw="cargo clippy --workspace"

# cargo clippy package
ccp() {
    cargo clippy -p $(echo $1 | tr -d '/') ${@:2}
}

